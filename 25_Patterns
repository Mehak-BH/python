for i in range(1,6):
    print(i*" *")
print("--------------------------------------------------------------------------")

rows = 5  
for i in range(rows, 0, -1):  
    for j in range(i):        
        print("*", end=" ")
    print()  
print("--------------------------------------------------------------------------")

rows = 5
for i in range(rows):
    print(" " * i + "*" * (rows - i))
print("--------------------------------------------------------------------------")

rows = 5
for i in range(1, rows + 1):
    print(" " * (rows - i) + "*" * i)
print("--------------------------------------------------------------------------")

for i in range(1,6):
    print("ABCDE"[:i])
print("--------------------------------------------------------------------------")    

for i in range(6,0,-1):
    print(""*(5-i)+"ABCDE"[:i])
print("--------------------------------------------------------------------------")

for i in range(1,6):
    print("12345"[:i])
print("--------------------------------------------------------------------------")

for i in range(6,0,-1):
    print(""*(5-i)+"12345"[:i])
print("--------------------------------------------------------------------------")

for i in range(5,0,-1):
    print(""*(5-i)+"*"*i)
print("--------------------------------------------------------------------------")

rows = 5  
for i in range(1, rows + 1):  
    for j in range(i):        
        print("*", end="")
    print() 
print("--------------------------------------------------------------------------")

for k in range(1,6):
    print(""*(5-k)+"*"*k)
for k in range(4,0,-1):
    print(""*(5-k)+"*"*k)
print("--------------------------------------------------------------------------")

rows = 5
for i in range(1, rows + 1):
    print(" " * (rows - i) + "*" * i)
for i in range(rows - 1, 0, -1):
    print(" " * (rows - i) + "*" * i)
print("--------------------------------------------------------------------------")


